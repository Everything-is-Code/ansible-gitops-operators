apiVersion: v1
kind: Secret
metadata:
  name: thanos-object-storage
  namespace: open-cluster-management-observability
type: Opaque
stringData:
  thanos.yaml: |
    type: s3
    config:
      bucket: {{ s3_bucket.stdout }}
      endpoint: {{ s3_endpoint.stdout }}
      insecure: true
      access_key: {{ access_key.stdout | b64decode }} 
      secret_key: {{ secret_key.stdout | b64decode }}
